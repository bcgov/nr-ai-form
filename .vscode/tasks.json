{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Install Python Dependencies",
      "command": "uv sync",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Run Backend Server",
      "command": "uv run uvicorn backend.main:app --reload --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Uvicorn running.*",
          "endsPattern": ".*Application startup complete.*"
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "Run Backend Server (Production)",
      "command": "uv run uvicorn backend.main:app --host 0.0.0.0 --port 8000",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Build Docker Image",
      "command": "docker build -t nr-ai-form-backend:latest .",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "Run Docker Container",
      "command": "docker run -p 8000:8000 --env-file .env nr-ai-form-backend:latest",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}